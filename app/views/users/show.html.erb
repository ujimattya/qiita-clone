
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <p><%= @user.profile%></p>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>投稿一覧 (<%= @user.posts.count %>)</h3>
      <%= will_paginate @posts %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>