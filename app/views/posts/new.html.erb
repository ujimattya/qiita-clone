<div class="d-flex align-items-center">
  <h1>投稿</h1>
  <div class="ml-auto posts_button">
      <a class="btn btn-outline-info" href="/posts">投稿一覧</a>
  </div>
</div>
<%= form_for @post do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
        <%= f.label :title, '投稿タイトル' %>
        <%= f.text_field :title, class: 'form-control', placeholder: "タイトルを入力してください。" %>
        
    </div>
    <div class="form-group">
        <%= f.label :content, '投稿内容' %>
        <%= f.text_area :content, class: 'form-control', rows:10, placeholder: "投稿内容を入力してください。"  %>
        
    </div>
    
    <div class="form-group">
        <%= f.label :tag_list, 'タグ' %>
        <%= text_field_tag 'post[tag_list]', @post.tag_list.join(","), "data-role" => "tagsinput", class: "form-control", placeholder: "タグをつける場合は入力してください。" %>
        
    </div>
    
    <%= f.button '投稿', type: 'button', onclick: 'submit();', class: 'btn btn-info btn-block' %>
    <small id="submit-tip" class="form-text text-muted">
        投稿する前に投稿内容を見直してください!
    </small>
<% end %>
