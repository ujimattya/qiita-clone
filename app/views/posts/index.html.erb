  <div class="col-md-8">
    
    　<h3>投稿一覧 (<%= @posts.count %>)</h3>
    　
    　
    　
     <%= will_paginate @posts %>

      <ul class="users">
        <% @posts.each do |post| %>
          <li class="all-post">
            <%= link_to gravatar_for(post.user, size: 50), post.user %>
            <span class="content"><%= link_to post.title, post %></span>
            <span class="timestamp">
              <%= link_to post.user.name, post.user %> が <%= post.created_at.to_s(:datetime_base) %> に投稿
              <% if current_user?(post.user) %>
                <%= link_to "消去", post, method: :delete,
                                                 data: { confirm: "You sure?" } %>
              <% end %>
            </span>
          </li>
        <% end %>
        
      </ul>
      
      <%= will_paginate @posts %>
   
  </div>